<Window x:Class="WpfAppLauncher.Views.PromptGroupInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="グループ名の入力" Height="320" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <StackPanel Margin="15" Background="{DynamicResource BackgroundBrush}">

        <TextBlock Text="グループを選択、または新しく入力してください："
                   Margin="0,0,0,10" FontSize="14" />

        <!-- スクロール可能なボタンエリア -->
        <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="GroupButtonsPanel" Margin="0,0,0,10" />
        </ScrollViewer>

        <!-- 入力欄 -->
        <TextBox x:Name="GroupInputBox" Height="30" Margin="0,0,0,10"
                 FontSize="14"
                 Background="{DynamicResource TextBoxBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}" />

        <!-- ボタン -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="キャンセル" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
